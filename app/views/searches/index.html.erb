<h1>Listing searches</h1>

<table>
  <thead>
    <tr>
      <th>Image path</th>
      <th>Date lost</th>
      <th>Num results</th>
      <th>Email</th>
      <th>Finished</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @searches.each do |search| %>
      <tr>
        <td><%= search.image_path %></td>
        <td><%= search.date_lost %></td>
        <td><%= search.num_results %></td>
        <td><%= search.email %></td>
        <td><%= search.finished %></td>
        <td><%= link_to 'Show', search %></td>
        <td><%= link_to 'Edit', edit_search_path(search) %></td>
        <td><%= link_to 'Destroy', search, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

